<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tomvandesteene.dictionaryapp.AddWordActivity">

    <EditText
        android:id="@+id/new_word"
        android:text=""
        android:hint="Schrijf nieuw woord hier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/new_defn"
        android:text=""
        android:hint="Schrijf nieuwe definitie hier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="addThisWordClick"
        android:text="Voeg dit woord toe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
